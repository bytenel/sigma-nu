  @import "bootstrap";  
 
  html,body{
    margin:0;
    padding:0;
    height:100%;
  }

  .footer{
  	text-align: center;
    background-color: #2d2d2d;
    color: #FFF; 
    height: 200px;
    margin-top: 10%;
    bottom: 0;
    padding: 10px;
  }

  .footer p{
    margin-top: 10px;
  }

  #news{
  	height: 600px;
  	width: 800px;
  }

  .carousel-image{
  	height: 300px;
  	width: 300px;
  }

/* TODO: fix this hack... */
  .carousel_fix_items{
    position: inherit;
    padding-top: 50px;
    padding-right: 300px;
  }

  .header{
    background: url(<%= asset_path 'fullbadge.png' %>);
    background-size: 20%;
    background-position: top left;
    background-repeat: no-repeat;
  }

  .navbar{
    background-color: #2d2d2d;
    height: 200px;
    color: #FFF;
    margin-bottom: 50px;
  }

  .nav_container{
    padding-left: 360px;
    padding-top: 148px;
    padding-right: 5px;
  }

  .pull-right{
    padding-right: 20px;
  }

  .small-width{
    width: 50%;
  }
 
  .twitter-img{
    height: 25%;
  }

  .facebook-img{
    height: 20%;
  }

  .container{
    height: 100%;
  }

  .img{
    height: 100%;
    width: 100%;
  }

.navbar-inverse .navbar-nav > .active > a, .navbar-inverse .navbar-nav > .active > a:hover, .navbar-inverse .navbar-nav > .active > a:focus {
  color: white;
  background-color: #2d2d2d;
}

.navbar-inverse .navbar-nav > .open > a, .navbar-inverse .navbar-nav > .open > a:hover, .navbar-inverse .navbar-nav > .open > a:focus {
  background-color: #2d2d2d;
  color: white;
}