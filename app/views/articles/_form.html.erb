<%= content_for :main_content do %>

<%= form_for(@article) do |f| %>
  <%= @article.formatted_errors %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :photo %><br/>
    <%= f.file_field :photo %>
  </div>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% end %>