<% content_for :main_content do %>
  <div class="row forum">
    <div class="right controls"><%= link_to "Back to Forum List", forums_path %></div>
      <div class="module">
        <div class="module_header">
          <h2> <%= @forum.title %> </h2>
          <span class="controls right">
            <%= link_to "New Topic", new_forum_topic_path(@forum), :class => "btn btn-primary" %>
            <%= link_to "Edit Forum", edit_forum_path(@forum), :class => "btn btn-primary" %>
            <%= link_to "Delete Forum", forum_path(@forum), :confirm => "Are you sure you want to delete this forum?", :method => :delete, :class => "btn btn-danger" %>
          </span>
        </div>
        <div>
          <table class="table table-bordered table-condensed">
            <thead>
              <th colspan="2" align="left">Topic</th>
              <th class="center">Replies</th>
              <th class="center">Views</th>
              <th class="last_post" align="left">Last Post</th>
            </thead>
            <% @forum.topics.each do |topic| %>
            <tbody>
              <tr>
                <td class="center-padded-table"><i class="img-circle icon-th-list"></i></td>
                <td class="description">
                  <%= link_to topic.title, topic_path(topic) %><br />
                  <span class="smaller">by <%= topic.user.username %></span>
                </td>
                <td class="center-padded-table"><%= topic.posts.size - 1 %></td>
                <td class="center-padded-table"><%= topic.hits %></td>
                <td class="last_post smaller">
                  <%= topic.posts.last.created_at %><br />
                  by <%= topic.posts.last.user.username %>
                </td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
    </div>
  </div>
<% end %>
